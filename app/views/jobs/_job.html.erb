<div id="job_<%= job.id %>" class="card mb-3">
  <div class="card-body">
    <div class="row">
      <div class="col-md-8">
        <h5 class="card-title">
          <%= link_to job.title, job_path(job), class: "text-decoration-none" %>
          <% if job.is_recent? %>
            <span class="badge bg-success">New</span>
          <% end %>
          <% if job.remote %>
            <span class="badge bg-info">Remote</span>
          <% end %>
        </h5>
        
        <p class="card-text">
          <strong><%= job.company.name %></strong> • 
          <%= job.location %> • 
          <%= job.employment_type.humanize %>
        </p>
        
        <p class="card-text">
          <%= truncate(job.description, length: 200) %>
        </p>
        
        <% if job.salary_range.present? %>
          <p class="card-text">
            <strong>Salary:</strong> <%= job.salary_range %>
          </p>
        <% end %>
        
        <p class="card-text">
          <small class="text-muted">
            Posted <%= job.days_since_posted %> days ago • 
            <%= pluralize(job.total_applications, 'application') %>
          </small>
        </p>
      </div>
      
      <div class="col-md-4 text-end">
        <% if user_signed_in? %>
          <% if current_user.company? && current_user.company == job.company %>
            <div class="btn-group-vertical w-100">
              <%= link_to "View", job_path(job), class: "btn btn-outline-primary btn-sm" %>
              <%= link_to "Edit", edit_job_path(job), class: "btn btn-outline-secondary btn-sm" %>
              <%= link_to "Delete", job_path(job), method: :delete, 
                          data: { 
                            turbo_method: :delete,
                            turbo_confirm: "Are you sure?" 
                          }, 
                          class: "btn btn-outline-danger btn-sm" %>
            </div>
          <% elsif current_user.job_seeker? %>
            <% if job.can_apply?(current_user.job_seeker) %>
              <%= link_to "Apply Now", job_path(job), class: "btn btn-primary btn-sm" %>
            <% else %>
              <span class="badge bg-secondary">Already Applied</span>
            <% end %>
          <% end %>
        <% else %>
          <%= link_to "View Details", job_path(job), class: "btn btn-primary btn-sm" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
