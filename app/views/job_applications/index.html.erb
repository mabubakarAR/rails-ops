<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">
          <% if current_user.job_seeker? %>
            My Applications
          <% elsif current_user.company? %>
            Job Applications
          <% else %>
            All Applications
          <% end %>
        </h1>
      </div>

      <% if @job_applications.any? %>
        <div class="row">
          <% @job_applications.each do |application| %>
            <div class="col-md-6 col-lg-4 mb-4" id="job_application_<%= application.id %>">
              <div class="card h-100 shadow-sm">
                <div class="card-body">
                  <div class="d-flex align-items-center mb-3">
                    <% if application.job.company&.logo.present? %>
                      <img src="<%= application.job.company.logo %>" alt="<%= application.job.company.name %>" class="rounded me-3" style="width: 50px; height: 50px; object-fit: cover;">
                    <% else %>
                      <div class="bg-primary text-white rounded d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                        <i class="fas fa-building"></i>
                      </div>
                    <% end %>
                    <div>
                      <h6 class="fw-bold mb-0"><%= application.job.company&.name %></h6>
                      <small class="text-muted"><%= application.job.location %></small>
                    </div>
                  </div>
                  
                  <h5 class="card-title fw-bold"><%= application.job.title %></h5>
                  
                  <div class="mb-3">
                    <span class="badge bg-<%= application.status == 'pending' ? 'warning' : application.status == 'accepted' ? 'success' : application.status == 'rejected' ? 'danger' : 'secondary' %>">
                      <%= application.status.humanize %>
                    </span>
                  </div>
                  
                  <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">Applied <%= time_ago_in_words(application.created_at) %> ago</small>
                    <div>
                      <%= link_to "View", job_application_path(application), class: "btn btn-outline-primary btn-sm" %>
                      <% if current_user.company? && application.status == 'pending' %>
                        <%= link_to "Review", job_application_path(application), class: "btn btn-primary btn-sm" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
          <h3 class="text-muted">
            <% if current_user.job_seeker? %>
              No applications yet
            <% elsif current_user.company? %>
              No applications received
            <% else %>
              No applications found
            <% end %>
          </h3>
          <p class="text-muted">
            <% if current_user.job_seeker? %>
              Start applying to jobs to see your applications here.
            <% elsif current_user.company? %>
              Applications from job seekers will appear here.
            <% else %>
              No job applications have been submitted yet.
            <% end %>
          </p>
          <% if current_user.job_seeker? %>
            <%= link_to "Browse Jobs", jobs_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
