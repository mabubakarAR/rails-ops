<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Companies</h1>
        <% if current_user.company? %>
          <%= link_to "Create Company Profile", new_company_path, class: "btn btn-primary" %>
        <% end %>
      </div>

      <!-- Search -->
      <div class="card mb-4">
        <div class="card-body">
          <%= form_with url: companies_path, method: :get, local: true, class: "row g-3" do |form| %>
            <div class="col-md-8">
              <%= form.text_field :search, placeholder: "Search companies...", class: "form-control", value: params[:search] %>
            </div>
            <div class="col-md-4">
              <%= form.submit "Search", class: "btn btn-outline-primary w-100" %>
            </div>
          <% end %>
        </div>
      </div>

      <!-- Companies List -->
      <% if @companies.any? %>
        <div class="row">
          <% @companies.each do |company| %>
            <div class="col-md-6 col-lg-4 mb-4" id="company_<%= company.id %>">
              <div class="card h-100 shadow-sm">
                <div class="card-body">
                  <div class="d-flex align-items-center mb-3">
                    <% if company.logo.present? %>
                      <img src="<%= company.logo %>" alt="<%= company.name %>" class="rounded me-3" style="width: 60px; height: 60px; object-fit: cover;">
                    <% else %>
                      <div class="bg-primary text-white rounded d-flex align-items-center justify-content-center me-3" style="width: 60px; height: 60px;">
                        <i class="fas fa-building fa-2x"></i>
                      </div>
                    <% end %>
                    <div>
                      <h5 class="fw-bold mb-0"><%= company.name %></h5>
                      <small class="text-muted"><%= company.location %></small>
                    </div>
                  </div>
                  
                  <p class="card-text text-muted"><%= truncate(company.description, length: 100) %></p>
                  
                  <div class="mb-3">
                    <% if company.industry.present? %>
                      <span class="badge bg-secondary me-2"><%= company.industry %></span>
                    <% end %>
                    <% if company.size.present? %>
                      <span class="badge bg-info"><%= company.size %></span>
                    <% end %>
                  </div>
                  
                  <div class="d-flex justify-content-between align-items-center">
                    <small class="text-muted">
                      <% if company.founded_year.present? %>
                        Founded <%= company.founded_year %>
                      <% end %>
                    </small>
                    <div>
                      <%= link_to "View", company_path(company), class: "btn btn-outline-primary btn-sm" %>
                      <% if current_user.company? && company == current_user.company %>
                        <%= link_to "Edit", edit_company_path(company), class: "btn btn-primary btn-sm" %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center py-5">
          <i class="fas fa-building fa-3x text-muted mb-3"></i>
          <h3 class="text-muted">No companies found</h3>
          <p class="text-muted">No companies match your search criteria.</p>
          <% if current_user.company? %>
            <%= link_to "Create Company Profile", new_company_path, class: "btn btn-primary" %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
