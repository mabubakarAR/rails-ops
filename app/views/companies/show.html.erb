<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Company Profile</h1>
        <% if current_user == @company.user %>
          <div class="d-flex gap-2">
            <%= link_to "Edit Profile", edit_company_path(@company), class: "btn btn-outline-primary" %>
            <%= link_to "Post New Job", new_job_path, class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>

      <!-- Company Header -->
      <div class="card mb-4">
        <div class="card-body">
          <div class="row align-items-center">
            <div class="col-md-2">
              <% if @company.logo.present? %>
                <img src="<%= @company.logo %>" alt="<%= @company.name %>" class="img-fluid rounded" style="max-width: 120px; max-height: 120px; object-fit: cover;">
              <% else %>
                <div class="bg-primary text-white rounded d-flex align-items-center justify-content-center" style="width: 120px; height: 120px;">
                  <i class="fas fa-building fa-3x"></i>
                </div>
              <% end %>
            </div>
            <div class="col-md-10">
              <h2 class="fw-bold mb-2"><%= @company.name %></h2>
              <p class="text-muted mb-3"><%= @company.description %></p>
              
              <div class="row">
                <div class="col-md-6">
                  <div class="mb-2">
                    <i class="fas fa-map-marker-alt text-primary me-2"></i>
                    <strong>Headquarters:</strong> <%= @company.headquarters %>
                  </div>
                  <div class="mb-2">
                    <i class="fas fa-industry text-primary me-2"></i>
                    <strong>Industry:</strong> <%= @company.industry %>
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="mb-2">
                    <i class="fas fa-users text-primary me-2"></i>
                    <strong>Size:</strong> <%= @company.size.humanize %>
                  </div>
                  <% if @company.founded_year.present? %>
                    <div class="mb-2">
                      <i class="fas fa-calendar text-primary me-2"></i>
                      <strong>Founded:</strong> <%= @company.founded_year %>
                    </div>
                  <% end %>
                </div>
              </div>
              
              <% if @company.website.present? %>
                <div class="mt-3">
                  <a href="<%= @company.website %>" target="_blank" class="btn btn-outline-primary">
                    <i class="fas fa-external-link-alt me-2"></i>Visit Website
                  </a>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <!-- Company Stats -->
      <div class="row mb-4">
        <div class="col-md-3">
          <div class="card text-center">
            <div class="card-body">
              <i class="fas fa-briefcase fa-2x text-primary mb-2"></i>
              <h4 class="fw-bold"><%= @company.total_jobs %></h4>
              <p class="text-muted mb-0">Total Jobs</p>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card text-center">
            <div class="card-body">
              <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
              <h4 class="fw-bold"><%= @company.active_jobs %></h4>
              <p class="text-muted mb-0">Active Jobs</p>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card text-center">
            <div class="card-body">
              <i class="fas fa-file-alt fa-2x text-info mb-2"></i>
              <h4 class="fw-bold"><%= @company.total_applications %></h4>
              <p class="text-muted mb-0">Applications</p>
            </div>
          </div>
        </div>
        <div class="col-md-3">
          <div class="card text-center">
            <div class="card-body">
              <i class="fas fa-star fa-2x text-warning mb-2"></i>
              <h4 class="fw-bold"><%= @company.average_rating %></h4>
              <p class="text-muted mb-0">Average Rating</p>
            </div>
          </div>
        </div>
      </div>

      <!-- Company Jobs -->
      <div class="card">
        <div class="card-header">
          <h3 class="fw-bold mb-0">Recent Jobs</h3>
        </div>
        <div class="card-body">
          <% if @company.jobs.any? %>
            <div class="row">
              <% @company.jobs.limit(6).each do |job| %>
                <div class="col-md-6 mb-3">
                  <div class="card h-100">
                    <div class="card-body">
                      <h5 class="card-title fw-bold"><%= job.title %></h5>
                      <p class="card-text text-muted"><%= truncate(job.description, length: 100) %></p>
                      
                      <div class="mb-3">
                        <% if job.salary_min && job.salary_max %>
                          <span class="badge bg-success me-2">$<%= number_with_delimiter(job.salary_min) %> - $<%= number_with_delimiter(job.salary_max) %></span>
                        <% end %>
                        <% if job.remote %>
                          <span class="badge bg-info me-2">Remote</span>
                        <% end %>
                        <span class="badge bg-secondary"><%= job.employment_type.humanize %></span>
                      </div>
                      
                      <div class="d-flex justify-content-between align-items-center">
                        <small class="text-muted"><%= time_ago_in_words(job.created_at) %> ago</small>
                        <%= link_to "View Job", job_path(job), class: "btn btn-primary btn-sm" %>
                      </div>
                    </div>
                  </div>
                </div>
              <% end %>
            </div>
            
            <% if @company.jobs.count > 6 %>
              <div class="text-center mt-3">
                <%= link_to "View All Jobs", jobs_path(company: @company.id), class: "btn btn-outline-primary" %>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-4">
              <i class="fas fa-briefcase fa-3x text-muted mb-3"></i>
              <h4 class="text-muted">No jobs posted yet</h4>
              <% if current_user == @company.user %>
                <p class="text-muted">Start by posting your first job!</p>
                <%= link_to "Post Your First Job", new_job_path, class: "btn btn-primary" %>
              <% else %>
                <p class="text-muted">This company hasn't posted any jobs yet.</p>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
