<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Jobify - Job Board Platform" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <link rel="manifest" href="/manifest.json">
    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom Navbar Styles -->
    <style>
      .navbar {
        backdrop-filter: blur(10px);
        background: linear-gradient(135deg, #0d6efd 0%, #0b5ed7 100%) !important;
      }
      
      .navbar-brand:hover {
        transform: scale(1.05);
        transition: transform 0.2s ease;
      }
      
      .nav-link {
        transition: all 0.2s ease;
        border-radius: 8px;
        padding: 8px 12px !important;
      }
      
      .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        transform: translateY(-1px);
      }
      
      .btn-outline-light:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }
      
      .btn-light:hover {
        transform: translateY(-1px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
      }
      
      @media (max-width: 991.98px) {
        .navbar-nav {
          margin-top: 1rem;
        }
        
        .nav-item {
          margin-bottom: 0.5rem;
        }
        
        .nav-item.me-4 {
          margin-right: 0 !important;
          margin-bottom: 1rem;
        }
      }
    </style>
  </head>

  <body>
    <% unless controller_name == 'sessions' || controller_name == 'registrations' %>
      <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-lg sticky-top">
        <div class="container">
          <!-- Brand -->
          <%= link_to "Jobify", root_path, class: "navbar-brand fw-bold fs-4" %>
          
          <!-- Mobile Toggle -->
          <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
            <span class="navbar-toggler-icon"></span>
          </button>
          
          <!-- Navigation -->
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ms-auto align-items-center">
              <% if user_signed_in? %>
                <!-- User Profile Section -->
                <li class="nav-item me-4">
                  <div class="d-flex align-items-center">
                    <div class="d-flex flex-column">
                      <span class="navbar-text text-white fw-semibold mb-0" style="font-size: 0.9rem;">
                        <%= current_user.full_name %>
                      </span>
                      <small class="text-white-50" style="font-size: 0.75rem;">
                        <%= current_user.role.humanize %>
                      </small>
                    </div>
                  </div>
                </li>
                
                <!-- Navigation Links -->
                <li class="nav-item me-3">
                  <%= link_to jobs_path, class: "nav-link fw-medium d-flex align-items-center" do %>
                    <i class="fas fa-search me-1"></i>
                    <span>Jobs</span>
                  <% end %>
                </li>
                
                <% if current_user.company? %>
                  <% if current_user.company.present? %>
                    <li class="nav-item me-3">
                      <%= link_to jobs_path, class: "nav-link fw-medium d-flex align-items-center" do %>
                        <i class="fas fa-briefcase me-1"></i>
                        <span>My Jobs</span>
                      <% end %>
                    </li>
                    <li class="nav-item me-3">
                      <%= link_to job_applications_path, class: "nav-link fw-medium d-flex align-items-center" do %>
                        <i class="fas fa-file-alt me-1"></i>
                        <span>Applications</span>
                      <% end %>
                    </li>
                  <% else %>
                    <li class="nav-item me-3">
                      <%= link_to new_company_path, class: "nav-link fw-medium d-flex align-items-center" do %>
                        <i class="fas fa-plus-circle me-1"></i>
                        <span>Create Profile</span>
                      <% end %>
                    </li>
                  <% end %>
                <% elsif current_user.job_seeker? %>
                  <% if current_user.job_seeker.present? %>
                    <li class="nav-item me-3">
                      <%= link_to job_applications_path, class: "nav-link fw-medium d-flex align-items-center" do %>
                        <i class="fas fa-file-alt me-1"></i>
                        <span>My Applications</span>
                      <% end %>
                    </li>
                  <% else %>
                    <li class="nav-item me-3">
                      <%= link_to new_job_seeker_path, class: "nav-link fw-medium d-flex align-items-center" do %>
                        <i class="fas fa-plus-circle me-1"></i>
                        <span>Create Profile</span>
                      <% end %>
                    </li>
                  <% end %>
                <% end %>
                
                <!-- Logout Button -->
                <li class="nav-item">
                  <form action="<%= destroy_user_session_path %>" method="post" style="display: inline;">
                    <input type="hidden" name="_method" value="delete">
                    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
                    <button type="submit" class="btn btn-outline-light btn-sm fw-medium d-flex align-items-center" style="border-radius: 20px;">
                      <i class="fas fa-sign-out-alt me-1"></i>
                      <span>Logout</span>
                    </button>
                  </form>
                </li>
              <% else %>
                <!-- Guest Navigation -->
                <li class="nav-item me-3">
                  <%= link_to new_user_session_path, class: "nav-link fw-medium d-flex align-items-center" do %>
                    <i class="fas fa-sign-in-alt me-1"></i>
                    <span>Login</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_registration_path, class: "btn btn-light btn-sm fw-medium d-flex align-items-center", style: "border-radius: 20px;" do %>
                    <i class="fas fa-user-plus me-1"></i>
                    <span>Sign Up</span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    <% end %>

    <main class="<%= controller_name == 'sessions' || controller_name == 'registrations' ? '' : 'container mt-4' %>">
      <% if notice %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= notice %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= alert %>
          <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
      <% end %>

      <%= yield %>
    </main>
  </body>
</html>
